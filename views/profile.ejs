<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Include Dropzone CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.css" rel="stylesheet">
    <link href="https://unpkg.com/dropzone@6.0.0-beta.1/dist/dropzone.css" rel="stylesheet" type="text/css" />

    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Add styles for the modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 200;
        }

        .modal-content {
            font-size: 25px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            width: 30%;
            height: 90%;
        }

        /* Styles for the dropzone */
        .dropzone {
            border-radius: 10px;
            border: 2px dashed #666666;
            background: #666666;
            transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
        }

        /* Styles for the upload icon */
        .dropzone i {
            transition: color 0.3s ease-in-out;
        }

        /* Styles for hover effect */
        .dropzone:hover {
            background-color: #333333;
            /* Darker background color on hover */
            border-color: #333333;
            /* Darker border color on hover */
        }

        /* Styles for hover effect on icon */
        .dropzone:hover i {
            color: #ffffff;
            /* Change icon color to white on hover */
        }
    </style>
</head>



<body class="bg-gray-900 text-white">
    <nav>
        <a href="/feed"></a>
    </nav>
    <main class="max-w-5xl mx-auto transition-all duration-300">
        <section class="banner relative mt-8">
            <div class="banner-content bg-white h-48 relative" style="border-radius: 20px;">
                <div
                    class="banner-overlay absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-50 duration-300 transition-bg-opacity cursor-pointer text-center group flex items-center justify-center">
                    <i class="fas fa-pencil-alt text-white opacity-0 group-hover:opacity-100 transition-all"></i>
                </div>


                <img id="bannerImage" src="" alt="Banner Image" class="w-full h-full object-cover"
                    style="border-radius: 18px;">
            </div>

            <div class="flex flex-col items-center mb-4 -mt-10">
                <!-- Profile Picture with Overlay -->
                <div class="relative">
                    <!-- Overlay for editing profile picture -->
                    <div id=""
                        class="overlay absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-50 group z-1000 duration-300 transition-all cursor-pointer rounded-full flex items-center justify-center">
                        <i class="fas fa-pencil text-white opacity-0 group-hover:opacity-100 transition-opacity"></i>
                    </div>


                    <img src="https://static.vecteezy.com/system/resources/thumbnails/002/534/006/small/social-media-chatting-online-blank-profile-picture-head-and-body-icon-people-standing-icon-grey-background-free-vector.jpg"
                        alt="Profile Picture" class="w-20 h-20 border-2 border-white rounded-full shadow-lg"
                        id="profilePicture">

                </div>
                <h1 class="text-2xl font-bold mt-4">
                    <%= user.username %>
                </h1>
                <p class="text-gray-300 mt-2">
                    <%= user.bio %>
                </p>
            </div>

        </section>
        <section class="activity-tabs mt-8">
            <div class="recent-posts bg-gray-800 p-4 shadow rounded">
                <!-- Recent forum posts content here -->
            </div>
            <div class="recent-comments bg-gray-800 p-4 shadow rounded mt-4">
                <!-- Recent comments content here -->
            </div>
        </section>
    </main>

    <!-- Modal -->
    <div id="modal" class="modal">
        <div class="modal-content bg-gray-900 rounded-lg shadow-lg p-6">
            <h2 class="text-xl font-bold mb-4 text-white">Change Profile Picture</h2>
            <p class="underline">Note: work in progress</p>
            <div class="flex justify-center mb-4">
                <!-- Dropzone for uploading image -->


                <div id="dropzone">

                </div>

            </div>

            <div class="flex justify-center mt-4">
                <button id="saveImageButton" class="bg-blue-500 text-white px-4 py-2 rounded">Save</button>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="bannerModal" class="modal">
        <div class="modal-content bg-gray-900 rounded-lg shadow-lg p-6">
            <h2 class="text-xl font-bold mb-4 text-white">Change Banner Image</h2>
            <p class="underline">Note: work in progress</p>
            <div class="flex justify-center mb-4">
                <!-- Dropzone for uploading image -->


                <div id="bannerDropzone">

                </div>

            </div>

            <div class="flex justify-center mt-4">
                <button id="saveBannerButton" class="bg-blue-500 text-white px-4 py-2 rounded">Save</button>
            </div>
        </div>
    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/min/dropzone.min.js"></script>

    <script src="/pfpHandler.js"></script>
    <script src="/user.js"></script>

    <script src="/modalHandle.js"></script>
    <script src="/profileLoad.js"></script>

</body>

</html>